---
layout: none
---
[{% for post in site.posts %}{
	"playbook-name": "{% assign words = post.slug | replace: '-', ' ' | split: ' ' %}{% capture titlecase %}{% for word in words %}{{ word | capitalize }} {% endfor %}{% endcapture %}{{ titlecase | truncate 1}}",
	"source": "{{post.source}}",
	"source-url": "{{post.source-url}}",
	"author": "{{post.author}}",
	"description": "{{post.description}}",
	"link": "{{post.link}}",
	"tags": "{{ post.tags | array_to_sentence_string }}",
	"categories": "{{post.categories}}"
}{% if forloop.rindex0 > 0 %},{% endif %}{% endfor %}]
